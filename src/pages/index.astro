import Navigation from '../components/Navigation.astro';
import Landing from '../components/Landing.astro';
import Skills from '../components/Skills.astro';
---

<!DOCTYPE html>
<html lang='en'>
  <Head />
  <body>
    <Navigation />

    <main>
      <Landing />
      <Skills />

      <section id='work'>
        <h2>Work</h2>

        <div class='container'>
          <div class='project'>
            <h3>Project 1</h3>
            <p>Project 1 description</p>
          </div>
          <div class='project'>
            <h3>Project 2</h3>
            <p>Project 2 description</p>
          </div>
          <div class='project'>
            <h3>Project 3</h3>
            <p>Project 3 description</p>
          </div>
        </div>
      </section>

      <section id='contact'>
        <h2>Contact</h2>

        <div class='container'>
          <div class='contact'>
            <h3>Phone</h3>
            <p>555-555-5555</p>
          </div>
          <div class='contact'>
            <h3>Email</h3>
            <p>example@example.com</p>
          </div>
          <div class='contact'>
            <h3>Socials</h3>
            <ul role='list'>
              <li><a href='#'><i class='devicon-github-plain colored'></i></a></li>
              <li><a href='#'><i class='devicon-linkedin-plain colored'></i></a></li>
              <li><a href='#'><i class='devicon-twitter-plain colored'></i></a></li>
