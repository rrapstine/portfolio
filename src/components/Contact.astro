---
import data from '../data/site.json';
import SkillIcon from './SkillIcon.astro';

const { socials, resume } = data;
---

<section id='contact'>
  <h2 class='ff-heading fs-heading fw-bold'>Let's Get In Touch</h2>

  <div class='container'>
    <div class='contact'>
      <h3 class='fs-subheading fw-medium'>Check out my resume</h3>
      <button><a href={resume} target='_blank' class='text-white'>Download</a></button>
    </div>
    <div class='contact'>
      <h3 class='fs-subheading fw-medium'>Find me on social media</h3>
      <ul role='list' class='socials-list'>
        {
          socials.map((social) => (
            <li>
              <a href={social.link}>
                <SkillIcon
                  icon={social.icon}
                  colored='true'
                  size='3'
                  fontColor={`${social.icon === 'github' ? 'white' : ''}`}
                />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>

<style lang='scss'>
  #contact {
    text-align: center;

    h2 {
      margin-bottom: 2em;
    }

    .container {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2em;
      justify-items: center;

      h3 {
        margin-bottom: 1em;
      }

      button {
        padding: 1em 3em;
        background-color: var(--primary-blue);
        border: none;
        border-radius: 8px;
      }

      .socials-list {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        gap: 2em;

        a {
        }
      }
    }
  }
</style>
