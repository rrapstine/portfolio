---
interface Props {
  icon: string;
  colored: boolean | string;
  size: string;
  fontColor?: string;
}

const { icon, colored, size, fontColor } = Astro.props;
---

<i
  class={`devicon-${icon}-plain ${colored ? 'colored' : ''}`}
  style={`font-size: ${size}em; ${fontColor ? 'color:' + fontColor : ''};`}></i>

<style lang='scss'>
  i {
    margin-bottom: 0.25em;
  }
</style>
